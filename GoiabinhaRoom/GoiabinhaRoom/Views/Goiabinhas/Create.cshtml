@model GoiabinhaRoom.Models.Goiabinha

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar goiabinha</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome:</label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="techLeader" class="control-label">Tech Leader</label>
                <input asp-for="techLeader" class="form-control" />
                <span asp-validation-for="techLeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horas" class="control-label">Horas de trabalho:</label>
                <input asp-for="horas" class="form-control" />
                <span asp-validation-for="horas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tickets" class="control-label">Tickets completados:</label>
                <input asp-for="tickets" class="form-control" value="0" />
                <span asp-validation-for="tickets" class="text-danger"></span>
            </div>
            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group mr-2" role="group">
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-primary" />
                    </div>
                </div>
                <div class="btn-group mr-2" -role="group">
                    <div>
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
