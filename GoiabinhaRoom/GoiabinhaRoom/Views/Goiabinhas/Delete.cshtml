@model GoiabinhaRoom.Models.Goiabinha

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>
</br>
<h3>Você tem certeza que deseja deletar esse goiabinha?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            Tech Leader:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.techLeader)
        </dd>
        <dt class = "col-sm-2">
            Horas de trabalho:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.horas)
        </dd>
        <dt class = "col-sm-2">
            Tickets completados:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tickets)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
    </form>
</div>
